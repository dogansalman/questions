@model IEnumerable<QuestionsSYS.ModelViews.UsersView>


@{
    ViewBag.Title = "Üyeler";
}



<div class="modal inmodal" id="dynamic-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            Bekleyin...
        </div>
    </div>
</div>


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kullanıcılar</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboards")">Yönetim</a>
            </li>
            <li class="active">
               <strong><a>Kullanıcılar</a></strong> 
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                 
                    <div class="ibox-tools">
                        <small class="pull-left">
                            En son 20 kullanıcı kaydı listelenmektedir. Aradığınız kullanıcıya aşağıdaki formu kullanarak ulaşabilirsiniz.
                        </small>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-8">
                            

                                @using (Html.BeginForm("Index", "Users", FormMethod.Get))
                                {
                                    <div class="input-group">
                                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "input-sm form-control", @placeholder="Ad, Soyad, Tel, E-posta" })
                                        <span class="input-group-btn">
                                            <input type="submit" class="btn btn-sm btn-primary search" value="Ara" />
                                        </span>
                                    </div>
                                }
                           
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Profile </th>
                                    <th>Ad Soyad </th>
                                    <th>Email </th>
                                    <th>Kayıt</th>
                                    <th>Güncelleme</th>
                                    <th>Ev Sahipliği </th>
                                    <th>Durum </th>
                                    <th>Kaynak</th>
                                    <th></th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td>
                                            <img style="width:50px;" src=" @Html.SetImage((@Html.DisplayFor(modelItem => item.photo).ToString()), 75,75)" class="img-rounded" alt="profile" />
                                        </td>
                                        <td class="text-capitalize">
                                            @Html.DisplayFor(modelItem => item.name) @Html.DisplayFor(modelItem => item.lastname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            @String.Format("{0:MM/dd/yyyy}", item.created_date)
                                        </td>
                               
                                        <td>
                                            @if (item.updated_date != null)
                                            {
                                                @String.Format("{0:MM/dd/yyyy}", item.updated_date)
                                            }
                                            @if (item.updated_date == null)
                                            {
                                                <span>-----</span>
                                            }

                                        </td>
                                        <td>
                                            @if (item.ownershiping == true)
                                            {
                                                <i class="fa fa-check text-navy"></i>
                                            }
                                            @if (item.ownershiping == false)
                                            {
                                                <i class="fa fa-times text-danger"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (item.state == true)
                                            {
                                                <i class="fa fa-check text-navy"></i>
                                            }
                                            @if (item.state == false)
                                            {
                                                <i class="fa fa-times text-danger"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (item.source == "facebook")
                                            {
                                                <div class="bg-success btn-circle">
                                                    <i class="fa fa-facebook"></i>
                                                </div>
                                            }
                                            @if (item.source == "web")
                                            {
                                                <div class="bg-warning btn-circle">
                                                    <i class="fa fa-internet-explorer"></i>
                                                </div>
                                            }
                                        </td>
                                        <td class="tooltip-demo">
                                            <button type="button" data-id=" @Html.DisplayFor(modelItem => item.id)" class="btn btn-primary btn-sm detail">Detay</button>
                                            <button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Modül aktif değil">İlanlar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="m-t-md">
                            <small class="pull-right">
                                Son Liste Tarihi: @Html.Label(DateTime.Now.ToLongDateString())
                            </small>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
   
    <script type="text/javascript">
        $(document).ready(function () {

            $('button.search').on('click', function () {
                $('.ibox').children('.ibox-content').toggleClass('sk-loading');
            });

            $('button.detail').on('click', function (e) {
                $('#dynamic-modal').removeData('bs.modal');
                const id = $(e.target).attr("data-id").trim();
                $('#dynamic-modal').modal({
                    keyboard: false,
                    remote: '/Users/Partial/' + id
                }).show();
            }) 
        });

    </script>
}
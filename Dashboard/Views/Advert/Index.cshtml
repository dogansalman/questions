@model IEnumerable<QuestionsSYS.ModelViews.AdvertsView>

@{
    ViewBag.Title = "İlanlar";
}
<div class="modal inmodal" id="dynamic-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            Bekleyin...
        </div>
    </div>
</div>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>İlanlar</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboards")">Yönetim</a>
            </li>
            <li class="active">
                <strong><a>İlanlar</a></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <small class="pull-left">
                        En son 20 ilan kaydı listelenmektedir. Farklı bir ilan incelemek için lütfen arama seçeneğini kullanın.
                    </small>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-8">


                            @using (Html.BeginForm("Index", "Advert", FormMethod.Get))
                            {
                                <div class="input-group">
                                    @Html.TextBox("advert_id", ViewBag.CurrentFilter as string, new { @class = "input-sm form-control", @placeholder = "Ilan No" })
                                    <span class="input-group-btn">
                                        <input type="submit" class="btn btn-sm btn-primary search" value="Ara" />
                                    </span>
                                </div>
                            }

                        </div>
                    </div>


                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İlan </th>
                                    <th>İl/İlçe </th>
                                    <th>Başlık </th>
                                    <th>Fiyat </th>
                                    <th>Kayıt </th>
                                    <th>Güncelleme</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>



                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td>

                                        <img style="width:50px;" src=" @Html.SetImage((@Html.DisplayFor(modelItem => item.image).ToString()), 75,75)" class="img-rounded" alt="profile" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.city) / @Html.DisplayFor(modelItem => item.town)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.title)
                                    </td>
                                    <td>
                                       
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @String.Format("{0:MM/dd/yyyy}", item.created_date)
                                    </td>
                                    <td>
                                        @if (item.updated_date != null)
                                        {
                                            @String.Format("{0:MM/dd/yyyy}", item.updated_date)
                                        }
                                        @if (item.updated_date == null)
                                        {
                                         <span>-----</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.state == true)
                                        {
                                            <span class="label label-primary pull-left">Onaylandı</span>
                                        }
                                        @if (item.state == false)
                                        {
                                            <span class="label label-success  pull-left">Onay Bekliyor</span>
                                        }

                                    </td>

                                    <td class="tooltip-demo">
                                        <div class="ibox-tools">
                                            <button class="btn btn-success pull-right dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></button>
                                            <ul class="dropdown-menu dropdown-user">
                                                <li>
                                                    @Html.ActionLink(
                                                            linkText: "Detay",
                                                            actionName: "Detail",
                                                            controllerName: "Advert",
                                                            routeValues: new
                                                            {
                                                                id = item.id
                                                            },
                                                            htmlAttributes: null
                                                        )
                                                </li>
                                                <li>
                                                    <a data-item="@item.id" class="approve">Onayla</a>
                                                </li>
                                                <li>
                                                    <a data-item="@item.id" class="cancel">İptal Et</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                }
                                
                            </tbody>
                        </table>
                        <div class="m-t-md">
                            <small class="pull-right">
                                Son Liste Tarihi: @Html.Label(DateTime.Now.ToLongDateString())
                            </small>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables") 
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/toastr")
    <script type="text/javascript">
        $(document).ready(function () {

            $('a.approve').click(function (e) {
                swal({
                    title: "Emin misiniz?",
                    text: "İlanı onaylamak istediğinize emin misiniz ?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#1ab394",
                    confirmButtonText: "Evet, Onayla!",
                    closeOnConfirm: false
                }, function () {

                    $.post("/Advert/Approve/" + $(e.target).attr("data-item"))
                        .done(function (response, status, jqxhr) {
                            swal("Onaylandı!", "İlan kaydı onaylandı.", "success");
                            setTimeout(() => window.location.reload(), 2000);
                        })
                        .fail(function (jqxhr, status, error) {
                            swal("Hata", "İlan onaylanamadı. Tekrar deneyin.", "error");
                        })

                });
            });

            $('a.cancel').click(function (e) {
                $('#dynamic-modal').removeData('bs.modal');
                const id = $(e.target).attr("data-item").trim();
                $('#dynamic-modal').modal({
                    keyboard: false,
                    remote: '/Advert/Partial/' + id
                }).show();
            });

           


        });

    </script>
}
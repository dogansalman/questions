@model IEnumerable<QuestionsSYS.Models.Question>

@{
    ViewBag.Title = "Tüm Sorular";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Sorular</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboards")">Yönetim</a>
            </li>
            <li class="active">
                <strong><a>Tüm Sorular</a></strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Telefon</th>
                            <th>Soru</th>
                            <th>Not</th>
                            <th>Kaynak</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name) @Html.DisplayFor(modelItem => item.lastname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone) / @Html.DisplayFor(modelItem => item.phone2)
                                </td>
                                <td>
                                    @if(item.question.Length > 100)
                                    {
                                         @item.question.Substring(0, 100);
                                        <a class="links" data-container="body" data-toggle="popover" data-placement="top" data-content="@item.question">
                                            Devamı...
                                        </a>
                                    }
                                    else
                                    {
                                         @item.question.ToString();
                                    }

                                </td>
                                <td>
                                    @if ( item.note != null && item.note.Length > 50)
                                    {
                                        @item.note.Substring(0, 50);
                                        <a class="links" data-container="body" data-toggle="popover" data-placement="top" data-content="@item.note">
                                            Devamı...
                                        </a>
                                    }
                                    else
                                    {
                                        @item.note;
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.source)
                                </td>
                                <td>
                                    @Html.ActionLink(
                                                            linkText: "Detay",
                                                            actionName: "Detail",
                                                            controllerName: "Question",

                                                            routeValues: new
                                                            {
                                                                id = item.id
                                                            },
                                                            htmlAttributes: new { @class = "btn btn-sm btn-success pull-right" }
                                                        )

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="m-t-md">
                    <small class="pull-right">
                        Son Liste Tarihi: @Html.Label(DateTime.Now.ToLongDateString())
                    </small>

                </div>
            </div>

        </div>

    </div>
</div>
@section Styles{
    @Styles.Render("~/plugins/toastrStyles")
}
@section Scripts{
    @Scripts.Render("~/plugins/toastr")

    <script type="text/javascript">
        if (location.search.indexOf("login=Failed") > -1) {
            toastr.error("Lütfen tüm bilgileri eksiksiz doldurun.", "Hata")
        }
    </script>
}
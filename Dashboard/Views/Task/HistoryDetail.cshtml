@model  QuestionsSYS.Models.TaskHistory

@{
    ViewBag.Title = "Tarihçe";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tarihçe Kaydı</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboards")">Yönetim</a>
            </li>
            <li>
                <a href="@Url.Action("Detail/" + ViewBag.task.id, "Task")">Görev</a>
            </li>
            <li class="active">
                <strong><a>Tarihçe</a></strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="ibox-content">

            <div class="sk-spinner sk-spinner-double-bounce">
                <div class="sk-double-bounce1"></div>
                <div class="sk-double-bounce2"></div>
            </div>

            @using (Ajax.BeginForm("UpdateHistory", "Task", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddSuccess();", OnComplete = "OnAddComplate();", OnFailure = "AddFailed();", OnBegin = "OnAdding()" }))
            {


                <div class="form-group">
                    <label for="state">Görev Durumu</label>
                    <br />
                    <select name="state" id="state" class="task_state form-control">
                        @foreach (var item in ViewBag.states)
                        {
                            <option @(ViewBag.task.order_state == item.name ? "selected" : String.Empty) value="@item.name">@item.name</option>
                        }
                    </select>
                </div>

                <input type="hidden" name="id" value="@Model.id" />
                <div class="form-group">
                    <label for="description">Not</label>
                    <textarea required type="text" cols="4" rows="4" placeholder="Açıklama" name="note" id="description" class="form-control">@Model.note</textarea>
                </div>

                <div class="form-group">
                    <label for="date">Tarih</label>
                    <div class="input-group date">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input readonly required type="text" class="form-control" name="added" value="@Model.added">
                    </div>
                </div>

                <button class="btn  btn-primary no-margins" type="submit">Güncelle</button>
            }

        </div>

    </div>
</div>
@section Styles{
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/dataPickerStyles")

}
@section Scripts{
    @Scripts.Render("~/plugins/toastr")

    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js");
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/dataPicker")

    <script type="text/javascript">


       

     
        $.fn.datepicker.dates['tr'] = {
            days: ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi"],
            daysShort: ["Pz", "Pzt", "Sal", "Çrş", "Prş", "Cu", "Cts"],
            daysMin: ["Pz", "Pzt", "Sa", "Çr", "Pr", "Cu", "Ct"],
            months: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
            monthsShort: ["Oca", "Şub", "Mar", "Nis", "May", "Haz", "Tem", "Ağu", "Eyl", "Eki", "Kas", "Ara"],
            today: "Bugün",
            clear: "Temizle",
            weekStart: 1,
            format: "dd.mm.yyyy"
        };

        //$('.input-group.date').datepicker({
        //    todayBtn: "linked",
        //    keyboardNavigation: false,
        //    forceParse: false,
        //    language: "tr",
        //    calendarWeeks: true,
        //    autoclose: true,

        //});
        
        function AddSuccess() {
            toastr.success("Tarihçe güncellendi.", "Tamam");         
        }
        function AddFailed() {
            toastr.error("Bir hata oluştu tekrar deneyin.", "Hata")
        }

        function OnAdding() {
            $('.ibox-content').toggleClass('sk-loading');
        }

        function OnAddComplate() {
            $('.ibox-content').toggleClass('sk-loading');
        }

     
    </script>
}